.logo
  width 600px
  height 93.47px
  margin 226px auto 267px
  img 
    display block
    width 100%
    height 100%

.form 
  width 100%
  box-sizing border-box
  padding 0 77px
  .active
    border-bottom 2px solid #2497FF!important
    ::-webkit-input-placeholder 
      /* WebKit browsers */
      color #2497FF
    ::-moz-placeholder 
      /* Mozilla Firefox 4 to 18 */
      color #2497FF
    ::-moz-placeholder 
      /* Mozilla Firefox 19+ */
      color #2497FF
    ::-ms-input-placeholder 
      /* Internet Explorer 10+ */
      color #2497FF
  &-item
    width 100%
    height 78px
    display flex
    align-items center
    justify-content space-between
    border-bottom 2px solid #E0E0E0
    .get-code
      width 186px
      height 52px
      display flex
      justify-content center
      align-items center
      box-sizing border-box
      border 2px solid #E0E0E0
      background #fff
      font-size 24px
      line-height 1
      color #999
      border-radius 26px
    input
      width calc(100% - 186px)
      box-sizing border-box
      padding 0 10px
      color #2497FF
      font-size 30px
      line-height 1
    .cols-12
      width 100%
    &:last-child
      margin-top 40px

.btn 
  width 460px
  height 80px
  margin 88px auto 49px
  background #2497FF
  display flex
  justify-content center
  align-items center
  font-size 40px
  line-height 1
  color #fff
  font-weight bold
  border-radius 40px

.tips 
  width 100%
  display flex
  justify-content center
  align-items center
  p
    display flex
    align-items center
    font-size 30px
    line-height 1
    color #333
    margin-left 15px
    i
      display block
      font-size 30px
      line-height 1
      color #2497FF
      font-style normal
      