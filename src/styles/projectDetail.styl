.main
  width 100%
  padding 0 30px 140px
  box-sizing border-box
  background #fff

  .title
    font-size 30px
    line-height 42px
    color #333333
    padding-top 53px
    padding-bottom 42px
    font-weight bold
    text-indent 1em
    position relative
    &:before
      content ''
      position absolute
      top 53px
      left 0
      height 42px
      width 10px
      background #2497FF

  .content
    .item
      width 100%
      display flex
      align-items center

      .left
        font-size 26px
        line-height 56px
        color #999

      .right
        font-size 26px
        line-height 56px
        color #333

.btn-warp
  width 100%
  position fixed
  left 0
  bottom 0
  height 117px
  background #fff
  z-index 999
  display flex
  justify-content center
  align-items flex-start
  padding-top 10px

  .btn
    width 460px
    height 80px
    display flex
    justify-content center
    align-items center
    background #2497FF
    color #ffffff
    font-size 40px
    line-height 1
    font-weight bold
    border-radius 40px

.cell
  border-bottom 1px solid #ebebeb
  padding-bottom 10px
  margin-bottom 10px
