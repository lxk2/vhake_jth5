.topic
  width 100%
  height 88px
  position fixed
  background #2497FF
  top 0
  left 0
  display flex
  align-items center
  z-index 999
  .t-item
    line-height 88px
    font-size 26px
    color #fff
    box-sizing border-box
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

.td
  &:first-of-type
      width 340px
      padding 0 10px 0 30px
    &:nth-of-type(2)
      width 158px
      padding-right 10px
    &:nth-of-type(3)
      width 127px
      padding-right 10px
    &:nth-of-type(4)
      width 125px
      padding-right 10px

.content
  padding-top 88px
  left 0
  top 0
  width 100%
  box-sizing border-box
  .tr
    width 100%
    height 90px
    display flex
    align-items center
    .x-td
      line-height 90px
      font-size 26px
      color #333
      box-sizing border-box
      white-space nowrap
      text-overflow ellipsis
      overflow hidden
      &:first-of-type
        font-weight bold
      &:nth-of-type(4)
        text-align center